<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwConfigExceptions="true"
      internalLogLevel="Info"
      internalLogFile="c:\temp\internal-nlog-integracion-core-siniestros-api.txt">

	<!-- enable asp.net core layout renderers -->
	<extensions>
		<add assembly="NLog.Web.AspNetCore" />
	</extensions>

	<!-- the targets to write to -->
	<targets>
		<!-- File Target for all log messages with basic details -->
		<target xsi:type="File" name="fileTarget" fileName="D:\logs\API_IntegracionCoreSiniestro\integracion-core-siniestros-api-${shortdate}.log"
						layout="${longdate}|CorrelationId=${aspnet-item:variable=CorrelationId}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}" />

		<!--Console Target for hosting lifetime messages to improve Docker / Visual Studio startup detection -->
		<target xsi:type="Console" name="consoleTarget" layout="${MicrosoftConsoleLayout}" />
	</targets>

	<!-- rules to map from logger name to target -->
	<rules>
		<!--All logs, including from Microsoft-->
		<logger name="*" minlevel="Error" writeTo="fileTarget" />

		<!--Specific logs for packages-->
		<logger name="ICore.Siniestro.*" minlevel="Info" writeTo="fileTarget" />
		<logger name="Sbins.*" levels="Info" writeTo="fileTarget" />
		<logger name="Microsoft.Hosting.Lifetime" levels="Error" writeTo="fileTarget"/>
		<logger name="Microsoft.AspNetCore.*" levels="Error" writeTo="fileTarget"/>

		<!--Output hosting lifetime messages to console target for faster startup detection -->
		<logger name="Sbins.*" minlevel="Info" writeTo="consoleTarget" />
		<logger name="Microsoft.Hosting.Lifetime" minlevel="Info" writeTo="consoleTarget" final="true"/>
		<logger name="Microsoft.AspNetCore.*" minlevel="Info" writeTo="consoleTarget" final="true"/>
	</rules>
</nlog>